<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="top"
	android:orientation="vertical">
	
	<!--Primeira Linha (PL)-->
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
	
		<!--Documento-->
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">
		
				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="Documento"/>

				<EditText
		
					android:layout_width="400dp"
					android:layout_height="wrap_content"/>
		</LinearLayout>
		<!--Documento SEI-->
		<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="NÂ° SEI:"/>
				<EditText
						android:layout_width="200dp"
						android:layout_height="wrap_content"/>

		</LinearLayout>
		<!--Processo-->
		<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="Processo SEI:"/>
				<EditText
					android:layout_width="200dp"
					android:layout_height="wrap_content"/>

		</LinearLayout>
	<!-- Fim PL -->
	</LinearLayout>

	<!--Segunda Linha (SL)-->
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Data de Recebimento"/>
			<DatePicker
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</LinearLayout>
		
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Data de Distribuicao"/>
			<DatePicker
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</LinearLayout>
		
	<!--Fim SL -->	
	</LinearLayout>
	
	
</LinearLayout>

